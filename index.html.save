<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Steem.js</title>
</head>
<body>
<script src="//cdn.steemjs.com/lib/latest/steem.min.js"></script>

<p>Repostas aos comentários do post xpto</p>
<ul id="result2"></ul>

<script>
<!--Respostas ao comentário xpto-->
var ul = document.getElementById('result2');

steem.api.getContentReplies('papa-pepper', 'steem-pocalypse-survival-game-contest-season-4-sign-up-100-sbd-already-in-the-prize-pool', function(err, result) {
	console.log(err, result);
	
	var li = document.createElement('li');

	for (i = 0; i < result.length ; i++) { 
		var li = document.createElement('li');
                li.innerHTML = result[i].author;
                ul.appendChild(li);
		if (var li = document.createElement('li');
                li.innerHTML = result;
                ul.appendChild(li);

	}

});

</script>


</body>
</html>
