<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Steem.js</title>
</head>
<body>
<script src="//cdn.steemjs.com/lib/latest/steem.min.js"></script>

<p>Repostas aos comentários do post xpto</p>
<ul id="result2"></ul>

<script>
<!--Respostas ao comentário xpto-->
var ul = document.getElementById('result2');

steem.api.getContentReplies('papa-pepper', 'steem-pocalypse-survival-game-contest-season-4-sign-up-100-sbd-already-in-the-prize-pool', function(err, result) {
	console.log(err, result);
	
	var li = document.createElement('li');

	
	for (i = 0; i < result.length ; i++) { 
		var li = document.createElement('li');
                li.innerHTML = result[i].author;
                ul.appendChild(li);
		
		steem.api.getContentReplies(result[i].author, result[i].permlink, function(err, result2) {
			console.log(err, result2);

			if(result2.length > 0){
				for (x = 0  ; x < result2.length ; x++){
				var li = document.createElement('li');
				li.innerHTML = result2[x].author;
                		ul.appendChild(li);
				}
			}
		
		});
	}

});

<!-- Funções -->

function player(name, life, money, resources){
        this.name = name;
        this.life = life;
        this.money = money;
        this.resources = resources; <!-- armas + utensilios  -->
}

function ver_users_replies(author, link){
	steem.api.getContentReplies(author, link, function(err, result) {
        console.log(err, result);
	
		if(result.length > 0){
			for (x = 0  ; x < result.length ; x++){
                   		register_player(result[x].author);
				ver_users_replies(result[x].author,result[x].permlink);		
			}
		}


	});
}

function register_player(username){
	var li = document.createElement('li');
	li.innerHTML = username;
	ul.appendChild(li);

}

</script>


</body>
</html>
